{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Initialize Coursework",
            "type": "shell",
            "command": "${workspaceFolder}/OFFHost/Scripts/Init_Course.py --WorkspaceFolder ${workspaceFolder}",
            "options": {
                "cwd": "${workspaceFolder}/OFFHost/Scripts"
            }
        },
        {
            "label": "Create Micro Focus JES Batch Server",
            "type": "shell",
            "command": "${workspaceFolder}/OFFHost/Scripts/MF_Provision_Region.py --WorkspaceFolder ${workspaceFolder} --SystemBase ${workspaceFolder}/OFFHost/System",
            "options": {
                "cwd": "${workspaceFolder}/OFFHost/Scripts"
            }
        },
        {
            "label": "Start Micro Focus JES Batch Server",
            "type": "shell",
            "command": "${workspaceFolder}/OFFHost/Scripts/MF_Region_Start.py",
            "options": {
                "cwd": "${workspaceFolder}/OFFHost/Scripts"
            }
        },
        {
            "label": "Stop Micro Focus JES Batch Server",
            "type": "shell",
            "command": "${workspaceFolder}/OFFHost/Scripts/MF_Region_Stop.py",
            "options": {
                "cwd": "${workspaceFolder}/OFFHost/Scripts"
            }
        },
        {
            "label": "Get Status of Micro Focus JES Batch Server",
            "type": "shell",
            "command": "${workspaceFolder}/OFFHost/Scripts/MF_Region_Status.py",
            "options": {
                "cwd": "${workspaceFolder}/OFFHost/Scripts"
            }
        },
        {
            "label": "Reset Micro Focus JES Batch Server",
            "type": "shell",
            "command": "${workspaceFolder}/OFFHost/Scripts/MF_Region_Reset.py",
            "options": {
                "cwd": "${workspaceFolder}/OFFHost/Scripts"
            }
        },
        {
            "label": "Delete Micro Focus JES Batch Server",
            "type": "shell",
            "command": "${workspaceFolder}/OFFHost/Scripts/MF_Delete_Region.py",
            "options": {
                "cwd": "${workspaceFolder}/OFFHost/Scripts"
            }
        },
        {
            "label": "Submit Job to Micro Focus JES Batch Server",
            "type": "shell",
            "command": "${workspaceFolder}/OFFHost/Scripts/Submit_Job.py --JCLFileName '${file}' --WSpaceFolder ${workspaceFolder}",
            "options": {
                "cwd": "${workspaceFolder}/OFFHost/Scripts"
            },
            "problemMatcher": []
        },
        {
            "label": "Get Output from Micro Focus JES Batch Server",
            "type": "shell",
            "command": "${workspaceFolder}/OFFHost/Scripts/Get_Job_Output.py --JobID ${input:JobID} --WSpaceFolder ${workspaceFolder}",
            "options": {
                "cwd": "${workspaceFolder}/OFFHost/Scripts"
            }
        },
        {
            "label": "Build Program",
            "type": "shell",
            "command": "ant",
            "options": {
                "env": {
                    "ANT_HOME": "C:\\Program Files (x86)\\Ant\\apache-ant-1.10.11",
                    "JAVA_HOME": "C:\\Program Files (x86)\\Micro Focus\\Enterprise Developer\\AdoptOpenJDK\\jre"
                }
            },
            "args": [
                "-f",
                "${workspaceFolder}/OFFHost/Scripts/build.xml",
                "-lib",
                "C:\\Program Files (x86)\\Micro Focus\\Enterprise Developer\\bin\\mfant.jar",
                "-Dbasedir=${workspaceFolder}",
                "-Dloaddir=${workspaceFolder}/OFFHost/System/Loadlib",
                "-Dprogname=${fileBasenameNoExtension}",
                "-Dprogext=${fileExtname}"
            ],
            "problemMatcher": [
                "$COBOLAntCopybooks",
                "$COBOLAnt"
            ]
        }
    ],
    "inputs": [
        {
            "id": "JobID",
            "description": "ID of Job to retrieve output for:",
            "default": "",
            "type": "promptString"
        }
    ]
}